export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME='random'
ZSH_THEME_RANDOM_QUIET=true

plugins=(alias-tips aws docker fzf git z)

zstyle ':completion:*:*:docker:*' option-stacking yes
zstyle ':completion:*:*:docker-*:*' option-stacking yes
zstyle ':completion:*:*:-command-:*:*' ignored-patterns '_*'       

source $ZSH/oh-my-zsh.sh

setopt share_history
setopt no_nomatch
unsetopt beep

alias open='xdg-open'
alias y='xclip -selection clipboard'; alias p='xclip -selection clipboard -o'
alias trash-put='gio trash'; alias trash-list='gio --list'
alias ls='exa'; alias l='exa -lbF --git'; alias ll='exa -la --git'; alias tree='exa --tree --git'; alias ltree='tree -l'
alias cat='bat'

HISTSIZE=10000
SAVEHIST=1000000
EDITOR=vi
export LESSHISTFILE=/dev/null

PATH=$PATH:/usr/share/bcc/tools:$HOME/.local/bin
